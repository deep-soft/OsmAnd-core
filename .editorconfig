root = true

[*]
max_line_length = 160
indent_style = space
indent_size = 4
continuation_indent_size = 8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[CMakeLists.txt]
indent_style = tab
continuation_indent_size = 4

[*.cmake]
indent_style = tab
continuation_indent_size = 4

[*.{c,h,cpp,hpp,cc}]
continuation_indent_size = 4
cpp_indent_braces = true
cpp_indent_multi_line_relative_to = outermost_parentesis
cpp_space_pointer_reference_alignment = left
